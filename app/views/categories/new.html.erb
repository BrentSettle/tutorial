<h1 align="center">Create new cateogry></h1>

<%= render 'shared/errors', obj: @category %>

    <%= form_for(@category, :html => {class: "form-horizonta", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm2">
          <%= f.label :name %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :username, class: "form-control", placeholder: "Category name", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offest-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <%end%>
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Cancel request and Back to articles listing", articles_path %> ]
    </div>